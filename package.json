{
  "name": "logistima",
  "version": "1.0.0",
  "description": "High-performance urban logistics infrastructure for Morocco",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:api": "nodemon src/server.ts",
    "dev:worker": "nodemon src/worker.ts",
    "build": "tsc",
    "start": "concurrently \"npm run start:api\" \"npm run start:worker\"",
    "start:api": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:stress": "node scripts/stress-test.js",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down"
  },
  "keywords": ["logistics", "express", "redis", "postgresql"],
  "author": "LogistiMa Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.10",
    "bullmq": "^4.14.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.8",
    "@types/cors": "^2.8.16",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "supertest": "^6.3.3"
  }
}